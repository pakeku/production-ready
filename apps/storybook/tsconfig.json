{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@repo/core/*": [
        "../../packages/core/src/*"
      ],
      "@repo/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@repo/ui": [
        "../../packages/ui/src"
      ],
      "@repo/core": [
        "../../packages/core/src"
      ],
      "@repo/utils": [
        "../../packages/utils/src"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "stories/**/*.ts",
    "stories/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
